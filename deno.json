{
  "name": "@dx/alpine-server",
  "version": "0.1.14",
  "license": "MIT",
  "tasks": {
    "test": "deno test --allow-run --allow-read --allow-write",
    "check": "deno fmt --check && deno lint",
    "update": "deno outdated --update --latest"
  },
  "imports": {
    "@deno/dom": "jsr:@b-fuze/deno-dom@^0.1.56",
    "@oak/oak": "jsr:@oak/oak@^17.2.0",
    "@std/assert": "jsr:@std/assert@^1.0.19",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.6",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/fmt": "jsr:@std/fmt@^1.0.9",
    "@std/log": "jsr:@std/log@^0.224.14",
    "@std/path": "jsr:@std/path@^1.1.4"
  },
  "exports": {
    ".": "./mod.ts",
    "./cli": "./cli.ts",
    "./create": "./create.ts"
  },
  "publish": {
    "exclude": [
      ".github",
      ".vscode",
      "example",
      ".gitignore",
      ".editorconfig",
      "deno.lock",
      "**/*.test.ts"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 240,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
